<mvc:View 
    controllerName="stellium.ext.podplugins.confirmationPlugin.controller.PluginView" 
    xmlns:l="sap.ui.layout" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m">
    <Panel id="podModelPluginPanel" 
        width="100%" 
        height="100%" 
        expandable="false" 
        expanded="true" 
        accessibleRole="Region" 
        backgroundDesign="Transparent">
        <content>
            <Table id="quantityConfirmationTable"
                growing="true"
                growingThreshold="20"
                growingScrollToLoad="false"
                inset="false"
                headerText="{i18n>qtyConfTable.HeaderText}"
                items="{quantitiesModel>/value}">
                <columns>
                    <Column hAlign="End">
                        <Text text="{i18n>qtyConfTable.collabel.YeildQuantity}"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="{i18n>qtyConfTable.collabel.ScrapQuantity}"/>
                    </Column>
                    <Column ></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text
                                text="{
                                    parts : [
                                        'quantitiesModel>totalYieldQuantity/value',
                                        'quantitiesModel>totalYieldQuantity/unitOfMeasure/uom'],
                                    formatter:'.showValueWithUom'
                                }"
                                textAlign="Right" />
                            <Text
                                text="{
                                    parts : [
                                        'quantitiesModel>totalScrapQuantity/value',
                                        'quantitiesModel>totalScrapQuantity/unitOfMeasure/uom'
                                    ],
                                    formatter:'.showValueWithUom'
                                }"
                                textAlign="Right" />
                            <FlexBox justifyContent="Center">
                                <items>
                                    <Button 
                                        tooltip="{i18n>report.quantity}"
                                        enabled="{= !!${quantitiesModel>userAuthorizedForWorkCenter} &amp;&amp; ${quantitiesModel>status} !== 'COMPLETED'}"
                                        text="{i18n>report.quantity}" 
                                        press="onOpenReportQuantityDialog"
                                        type="Emphasized" />
                                </items>
                            </FlexBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Panel>
</mvc:View>